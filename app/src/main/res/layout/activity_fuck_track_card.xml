<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/fuck_track_card_bg" />

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tv_track_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="588px"
            android:text="123****4567的动态行程卡"
            android:textColor="#FF47464B"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_track_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="694px"
            android:text="更新于：2022.12.03 18:07:22"
            android:textColor="#FF94949D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="542px"
            android:layout_height="542px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="748px"
            android:src="@drawable/fuck_track_card_arrow" />

        <TextView
            android:id="@+id/tv_track_city"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="1365px"
            android:paddingEnd="44dp"
            android:text="四川省成都市"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.core.widget.NestedScrollView>
